{
  "name": "@sb0-pay/frontend",
  "version": "1.2.0",
  "description": "SB0 Pay Frontend Web Application",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
