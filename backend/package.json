{
  "name": "@sb0-pay/backend",
  "version": "0.4.0",
  "description": "SB0 Pay Backend API Server",
  "private": true,
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "dev": "bun --hot index.ts",
    "build": "bun build index.ts --outdir=dist --target=bun --minify",
    "start": "bun run index.ts",
    "start:prod": "NODE_ENV=production bun run dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^0.8.0",
    "@elysiajs/jwt": "^0.8.0",
    "elysia": "^0.8.17",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "bun-types": "^1.0.0",
    "eslint": "^8.52.0",
    "typescript": "^5.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "trustedDependencies": [
    "elysia"
  ]
}